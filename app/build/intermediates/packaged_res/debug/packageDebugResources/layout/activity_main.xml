<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/teal_200"
        app:mcv_arrowColor="@color/black"
        app:mcv_dateTextAppearance="@style/CustomDateText" />

    <Button
        android:id="@+id/addEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить событие"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/openEventsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать события выбранного дня"
        android:layout_marginTop="8dp" />

</LinearLayout>